
@{
    ViewBag.Title = "Point Data Admin";
    Layout = "~/Views/Shared/_LayoutSetup.cshtml";
}

<h2>@Resources.Resources.PointElementDataAdmin</h2>




<script src="~/Scripts/application/Ajax_Request_Response.js"></script>
