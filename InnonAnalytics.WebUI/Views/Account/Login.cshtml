@using Resources
@using InnonAnalytics.WebUI.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";   
}

   @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "margin-bottom-0", role = "form" }))
            {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
            <div class="form-group m-b-20">
                @Resources.Email
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group m-b-20">
                @Resources.Password
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                
            </div>
    <div class="form-group m-b-20">
        @Html.CheckBoxFor(m => m.RememberMe)
        @Resources.RememberMe
    </div>
            <div class="login-buttons">                
                <input type="submit" value="@Resources.SignMeIn" class="btn btn-success btn-block btn-lg">
            </div>
            <div class="m-t-20">
               @Html.ActionLink(Resources.RegisterNewUser, "Register")<br />
                @Html.ActionLink(Resources.Forgotyourpassword, "ForgotPassword")       
            </div>
            }

